<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".f_atnmod">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical" >

        <EditText
            android:id="@+id/takes_suid"
            android:layout_marginTop="100dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter student's ID" />

        <EditText
            android:id="@+id/takes_subject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter subject name" />

        <EditText
            android:id="@+id/takes_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter date (dd-MM)" />

        <EditText
            android:id="@+id/takes_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter scheduled time of subject (HH:mm:ss) " />

        <Button
            android:id="@+id/mod_db"
            android:layout_marginTop="50dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Submit" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>